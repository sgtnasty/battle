<Window x:Class="AdeptusWpf.AboutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="About Adeptus" Height="347" Width="299" ResizeMode="NoResize" ShowInTaskbar="False" Loaded="AboutWindow_Loaded"
        WindowStartupLocation="CenterOwner">
    <Grid Width="Auto" Height="Auto">
        <Grid.Background>
            <ImageBrush ImageSource="/AdeptusWpf;component/Images/adeptus.jpeg" Opacity="0.25"></ImageBrush>
        </Grid.Background>
        <Button Content="Close" Height="23" HorizontalAlignment="Right" Margin="0,0,12,12" Name="Close" VerticalAlignment="Bottom" Width="75" Click="Close_Click" />
        <TextBlock Height="255" Margin="12,12,12,0" Name="AboutText" Text="TextBlock" VerticalAlignment="Top" TextWrapping="Wrap" />
        <Button Content="Copyright" Height="23" HorizontalAlignment="Left" Margin="12,0,0,12" Name="Copyright" VerticalAlignment="Bottom" Width="75" Click="Copyright_Click" />
    </Grid>
</Window>
